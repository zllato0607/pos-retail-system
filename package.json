{
  "name": "pos-retail-system",
  "version": "1.0.0",
  "description": "Point of Sale Web Application for Local Retail Management",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "vite",
    "build": "vite build",
    "build:production": "node build-production.js",
    "build:static": "node create-static-build.js",
    "preview": "vite preview",
    "init-db": "node init-mysql-database.js",
    "setup-db": "node init-mysql-database.js",
    "setup-mysql": "node init-mysql-database.js",
    "start": "NODE_ENV=production node server/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop pos-retail-system",
    "restart:pm2": "pm2 restart pos-retail-system",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "deploy:windows": "deploy.bat",
    "verify": "node verify-deployment.js",
    "cleanup": "node cleanup-for-production.js"
  },
  "keywords": [
    "pos",
    "retail",
    "inventory",
    "sales"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "html5-qrcode": "^2.3.8",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.303.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.2",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.3",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.9"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  }
}
